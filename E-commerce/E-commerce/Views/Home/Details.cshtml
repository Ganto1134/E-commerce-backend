@model E_commerce.Models.Prodotto

@{
    ViewData["Title"] = "Dettagli Prodotto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img class="img-fluid" src="@Model.ImmagineLink" alt="@Model.Nome">
        </div>
        <div class="col-md-6">
            <h1>@Model.Nome</h1>
            <p>@Model.Descrizione</p>
            <p><strong>Prezzo:</strong> @Model.Prezzo €</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Torna alla Home</a>
        </div>
    </div>
</div>