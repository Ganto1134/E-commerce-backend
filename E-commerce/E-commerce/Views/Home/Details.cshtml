@model Prodotto



<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>@Model.Nome</h4>
        </div>
        <div class="card-body">
            <p><strong>Descrizione:</strong> @Model.Descrizione</p>
            <p><strong>Prezzo:</strong> @Model.Prezzo €</p>
            <p><strong>Categoria:</strong> @Model.Categoria</p>
            <p><strong>Data Inserimento:</strong> @(Model.DataInserimento.HasValue ? Model.DataInserimento.Value.ToString("dd/MM/yyyy") : "N/A")</p>
            <img src="@Model.ImmagineLink" alt="@Model.Nome" class="img-fluid" />
        </div>
        <div class="card-footer">
            <form asp-controller="Cart" asp-action="AggiungiAlCarrello" method="post" class="d-flex justify-content-between">
                <input type="hidden" name="IDProdottoFK" value="@Model.IDProdotto" />
                <input type="hidden" name="PrezzoFK" value="@Model.Prezzo" />
                <input type="hidden" name="NomeFK" value="@Model.Nome" />
                <select class="form-select w-25" name="Quantita" aria-label="Seleziona la quantità">
                    <option selected="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    
                </select>
                <button type="submit" class="btn btn-secondary">Aggiungi al carrello</button>
            </form>
        </div>
    </div>
</div>