@model IEnumerable<E_commerce.Models.Prodotto>

@{
    ViewData["Title"] = "Lista Prodotti";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

<div class="text-center">
    <h1 class="display-4">memEShop</h1>
    <h2>Il tuo portale irriverente per i tuoi acquisti compulsivi!</h2>
</div>


    <div class="row">
        @foreach (var prodotto in Model)
        {
            <div class="col-md-4 my-4">
                <div class="card mb-2 h-100 rounded-5 shadow-lg border-0">
                    <img class="card-img-top" src="@prodotto.ImmagineLink" alt="@prodotto.Nome">
                    <div class="card-body d-flex flex-column justify-content-around">
                        <h4 class="card-title mt-3">@prodotto.Nome</h4>
                        <div class="d-flex align-content-center justify-content-around mt-4">
                            <p class="fw-bold">@prodotto.Prezzo €</p>
                            <a asp-action="Details" asp-route-id="@prodotto.IDProdotto" class="btn btn-outline-dark">Dettagli</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

